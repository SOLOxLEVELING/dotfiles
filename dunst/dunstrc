[global]
    # --- POSITIONING ---
    width = 320

    # NEW SYNTAX: (min_height, max_height)
    # This allows the notification to grow dynamically up to 300px
    height = (0, 300)

    origin = top-right

    # NEW SYNTAX: (horizontal, vertical)
    offset = (15, 60)

    notification_limit = 5

    # --- LOOKS ---
    font = JetBrainsMono Nerd Font 11

    # The "Card" Look
    frame_width = 2
    frame_color = "#89b4fa"
    corner_radius = 12
    separator_color = frame

    # Padding
    padding = 15
    horizontal_padding = 15
    text_icon_padding = 15

    # Icons
    icon_position = left
    min_icon_size = 48
    max_icon_size = 64
    enable_recursive_icon_lookup = true

    # --- BEHAVIOR ---
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    # --- PROGRESS BAR ---
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 4

[urgency_low]
    background = "#1e1e2e"
    foreground = "#a6adc8"
    frame_color = "#a6adc8"
    timeout = 4

[urgency_normal]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    frame_color = "#89b4fa"  # Blue Border
    timeout = 6

[urgency_critical]
    background = "#1e1e2e"
    foreground = "#cdd6f4"
    frame_color = "#f38ba8"  # Red Border (Danger!)
    timeout = 0
